<div id="message">
    Based on this information, your total daily calorie target should be:
    <div id="result"></div>
</div>

<script>
    var app = app || {};
    app.dom = {};

    app.dom.calculate = document.getElementById('calculate');
    app.dom.age = document.getElementById('age');
    app.dom.weight = document.getElementById('weight');
    app.dom.height = document.getElementById('height');
    // sex
    app.dom.male = document.getElementById('male');
    app.dom.female = document.getElementById('female');
    //goal
    app.dom.lose = document.getElementById('lose');
    app.dom.maintain = document.getElementById('maintain');
    app.dom.gain = document.getElementById('gain');
    //activity-level
    app.dom.sedentary = document.getElementById('sedentary');
    app.dom.modactive = document.getElementById('mod-active');
    app.dom.active = document.getElementById('active');
    app.dom.message = document.getElementById('message');
    app.dom.result = document.getElementById('result');

    app.dom.calculate.addEventListener('click', function(e) {
        e.preventDefault();
        var x;
        w = app.dom.weight.value;
        h = app.dom.height.value;
        a = app.dom.age.value;
        if (app.dom.male.checked) {
            //Male
            console.log('male');
            x = 66.5 + 13.8 * w + 5 * h - 6.8 * a;
        } else if (app.dom.female.checked) {
            console.log('female');
            //Female
            x = 655.1 + 9.6 * w + 1.9 * h - 4.7 * a;
        }

        var ef;
        if (app.dom.sedentary.checked) {
            ef = 1.2;
        } else if (app.dom.modactive.checked) {
            ef = 1.3;
        } else if (app.dom.active.checked) {
            ef = 1.4;
        }

        var z = 1;
        if (app.dom.lose.checked) {
            z = 0.9;
        } else if (app.dom.gain.checked) {
            z = 1.1;
        }

        var result = x * ef * z;
        app.dom.result.innerHTML = Math.round(result);
        app.dom.message.style.display = 'block';
    });
</script>
